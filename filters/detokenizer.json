{
    "description": "Detokenizes tokenized text. If the language is unsupported, enter 'other'",
    "type": "monolingual",
    "command": "./deescape-special-chars.perl -l $LANG",
    "parameters": {
        "LANG":
        {
            "type": "str",
            "default": "en",
            "allowed_values":
            [
                "en",
                "cs",
                "fr",
                "it",
                "fi",
                "other"
            ]
        }
    }
}
