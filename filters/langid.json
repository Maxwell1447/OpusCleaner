{
    "description": "Detect language",
    "command": "./langid.py --src_lang $SRC_LANG --trg_lang $TRG_LANG ${DEBUG:+--debug}",
    "parameters":
    {
        "SRC_LANG":
        {
            "type": "str",
            "default": ""
        },
        "TRG_LANG":
        {
            "type": "str",
            "default": ""
        },
        "DEBUG":
        {
            "type": "bool"
        }
    },
    "type": "bilingual"
}
